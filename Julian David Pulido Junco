for i in range(n, 0, -1):
    print('*' * i)
n = int(input("Ingrese el número de filas: "))
for i in range(1, n + 1):
        print(' ' * (n - i) + '*' * (2 * i - 1))   
for i in range(n - 1, 0, -1):
        print(' ' * (n - i) + '*' * (2 * i - 1))

